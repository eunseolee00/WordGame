<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:backgroundTint="#F9F9F9"
    tools:context=".MainActivity">

    <RadioButton
        android:id="@+id/hardLevel"
        android:layout_width="355dp"
        android:layout_height="81dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background"
        android:backgroundTint="#D6E2E9"
        android:buttonTint="#99C1DE"
        android:fontFamily="sans-serif-smallcaps"
        android:text="HARD (3 GUESSES)"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mediumLevel" />

    <RadioButton
        android:id="@+id/mediumLevel"
        android:layout_width="355dp"
        android:layout_height="81dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background"
        android:backgroundTint="#8DD6E2E9"
        android:buttonTint="#9E99C1DE"
        android:fontFamily="sans-serif-smallcaps"
        android:text="MEDIUM (4 Guesses)"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easyLevel" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Levels"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="356dp"
        android:layout_height="123dp"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Guess That Word!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/easyLevel"
        android:layout_width="355dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"
        android:backgroundTint="#52D6E2E9"
        android:buttonTint="#99C1DE"
        android:fontFamily="sans-serif-smallcaps"
        android:text="EASY (5 Guesses)"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="161dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FAD2E1"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Start"
        android:textColor="#0B0B0B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hardLevel" />

</androidx.constraintlayout.widget.ConstraintLayout>