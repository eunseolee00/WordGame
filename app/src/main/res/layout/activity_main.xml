<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:backgroundTint="#F9F9F9"
    tools:context=".MainActivity">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="354dp"
        android:layout_height="369dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/easyLevel"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:backgroundTint="#68BCD4E6"
            android:buttonTint="#99C1DE"
            android:checked="true"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="howHard"
            android:text="Easy (3 Letters)"
            android:textColor="#151515"
            android:textSize="35sp" />

        <RadioButton
            android:id="@+id/mediumLevel"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:backgroundTint="#A4BCD4E6"
            android:buttonTint="#99C1DE"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="howHard"
            android:text="Medium (4 Letters)"
            android:textColor="#151414"
            android:textSize="35sp" />

        <RadioButton
            android:id="@+id/hardLevel"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:backgroundTint="#BCD4E6"
            android:buttonTint="#99C1DE"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="howHard"
            android:text="Hard (5+ Letters)"
            android:textColor="#0E0E0E"
            android:textSize="35sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Levels"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="356dp"
        android:layout_height="123dp"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Guess That Word!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/startButton"
        android:layout_width="161dp"
        android:layout_height="55dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="#FAD2E1"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="playGame"
        android:text="Start"
        android:textColor="#0B0B0B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />


</androidx.constraintlayout.widget.ConstraintLayout>